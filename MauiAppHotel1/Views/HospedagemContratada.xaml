<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel1.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray200}">
    
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="Suíte Super Luxo"
               TextColor="DarkCyan"
               FontFamily="PlaywriteExtra"
               FontAttributes="Bold"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                    <Label Text="2" 
                           TextColor="DarkCyan"/>

                </HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="Crianças: "/>
                    <Label Text="2"
                           TextColor="DarkCyan"/>
                </HorizontalStackLayout>
                
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in: "/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out: "/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia: "/>

                <Label Grid.Row="1" Grid.Column="0" Text="27/05/2025"/>
                <Label Grid.Row="1" Grid.Column="1" Text="30/05/2025"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>
                
            </Grid>            
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor total: "/>
                <Label Text=" R$ 900,00"/>
                
            </HorizontalStackLayout>            
        </Frame>

        <Button Text="Voltar" 
                HorizontalOptions="Center"
                BackgroundColor="DarkCyan"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>